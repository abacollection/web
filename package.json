{
  "name": "@ladjs/web",
  "description": "Web server for Lad",
  "version": "0.3.6",
  "author": "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)",
  "ava": {
    "failFast": true,
    "verbose": true
  },
  "bugs": {
    "url": "https://github.com/ladjs/web/issues",
    "email": "niftylettuce@gmail.com"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "contributors": [
    "Nick Baugh <niftylettuce@gmail.com> (http://niftylettuce.com/)"
  ],
  "dependencies": {
    "@ladjs/i18n": "^1.1.0",
    "@ladjs/koa-better-static": "^2.0.0",
    "@ladjs/shared-config": "^0.0.2",
    "@ladjs/state-helper": "^0.0.2",
    "@ladjs/store-ip-address": "^0.0.5",
    "auto-bind": "^2.0.0",
    "boolean": "^0.2.0",
    "boom": "7.3.0",
    "cabin": "^2.0.13",
    "express-request-id": "^1.4.1",
    "ip": "^1.1.5",
    "kcors": "^2.2.2",
    "koa": "^2.7.0",
    "koa-404-handler": "^0.0.2",
    "koa-basic-auth": "^4.0.0",
    "koa-better-error-handler": "^1.3.6",
    "koa-better-flash": "^0.0.3",
    "koa-better-timeout": "^0.0.3",
    "koa-bodyparser": "^4.2.1",
    "koa-compress": "^3.0.0",
    "koa-conditional-get": "^2.0.0",
    "koa-connect": "^2.0.1",
    "koa-csrf": "^3.0.7",
    "koa-etag": "^3.0.0",
    "koa-favicon": "^2.0.1",
    "koa-generic-session": "^2.0.1",
    "koa-helmet": "^4.1.0",
    "koa-isajax": "^1.0.5",
